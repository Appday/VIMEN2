<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/mentor">

    <TextView android:text="Hallo Erstis" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#ff9b5400" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ersti-Tour"
        android:id="@+id/btn_tour"
        android:onClick="tourOnClick"
        android:layout_below="@+id/button11"
        android:layout_alignStart="@+id/button10"
        android:layout_alignEnd="@+id/textView"
        android:textColor="#ff9b5400" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mensaplan"
        android:id="@+id/button9"
        android:onClick="mensa"
        android:layout_below="@+id/button10"
        android:layout_alignStart="@+id/button10"
        android:layout_alignEnd="@+id/button10"
        android:textColor="#ff9b5400" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Studium"
        android:onClick="StudiumClick"
        android:id="@+id/button10"
        android:layout_below="@+id/btn_tour"
        android:layout_alignStart="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:textColor="#ff9b5400" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To-Do-Liste"
        android:id="@+id/button11"
        android:onClick="todoliste"
        android:layout_below="@+id/textView"
        android:layout_marginTop="51dp"
        android:layout_alignStart="@+id/btn_tour"
        android:textColor="#ff9b5400" />

</RelativeLayout>
