<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ole.vimen.MainActivity2Activity"
    android:background="@drawable/mentor">

    <TextView
        android:text="ViMen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textSize="75sp"
        android:textColor="#ff9b5400"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />



    <TextView
        android:text="Dein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:textSize="50sp"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true"
        android:textColor="#ff373737" />

    <TextView
        android:text="Vi"
        android:textColor="#ff9b5400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="50sp"
        android:layout_below="@+id/textView1"
        android:layout_toStartOf="@+id/title" />

    <TextView
        android:text="Me"
        android:textColor="#ff9b5400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="50sp"
        android:layout_below="@+id/textView2"
        android:layout_toStartOf="@+id/textView5" />

    <TextView
        android:text="rtueller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="50sp"
        android:layout_above="@+id/textView3"
        android:layout_toEndOf="@+id/textView2"
        android:textColor="#ff373737" />

    <TextView
        android:text="ntor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="50sp"
        android:textColor="#ff373737"
        android:layout_alignTop="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Los geht's!"
        android:id="@+id/button15"
        android:onClick="gogo"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/title"
        android:layout_toEndOf="@+id/textView2"
        android:background="#01ffffff"
        android:textColor="#ff9b5400"
        android:textSize="20sp"/>

